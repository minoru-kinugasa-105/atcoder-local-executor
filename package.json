{
    "name": "atcoder-local-executor",
    "version": "0.0.0",
    "main": "dist/main.js",
    "build": {
        "appId": "com.atcoder-local-executor.app",
        "productName": "AtCoder Local Executor",
        "directories": {
            "buildResources": "assets",
            "output": "dist"
        },
        "files": [
            "dist/**/*",
            "public/**/*"
        ],
        "extraMetadata": {
            "main": "dist/main.js"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    },
    "scripts": {
        "dev": "concurrently \"next dev\" \"wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .\"",
        "build": "next build && tsc -p tsconfig.electron.json && electron-builder",
        "start": "next start",
        "electron-dev": "cross-env NODE_ENV=development electron .",
        "next-dev": "next dev"
    },
    "dependencies": {
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "lucide-react": "^0.514.0",
        "next": "15.3.3",
        "prettier": "^3.5.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "sass": "^1.89.2",
        "wait-on": "^8.0.3"
    },
    "devDependencies": {
        "@types/node": "^20.19.0",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3"
    }
}
