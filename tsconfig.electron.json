{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": false,
        "sourceMap": true,
        "rootDir": "src/electron",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/electron/**/*"]
}
